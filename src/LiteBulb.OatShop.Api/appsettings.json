{
    //"Logging": {
    //    "LogLevel": {
    //        "Default": "Information",
    //        "Microsoft.AspNetCore": "Warning"
    //    }
    //},
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "#{DatabaseConnectionString}"
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "c:\\root\\log-.txt",
                    "rollingInterval": "Day"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithEnvironmentUserName"
        ]
    }
}
